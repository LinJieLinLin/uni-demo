{
  //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
  "pages": [
    {
      "path": "pages/hello/index",
      "style": {
        "navigationBarTitleText": "欢迎页"
      }
    },
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "uni-demo"
      }
    },
    {
      "path": "pages/componentsDemo/index",
      "style": {
        "navigationBarTitleText": "uni-demo"
      }
    },
    {
      "path": "pages/my/index",
      "style": {
        "navigationBarTitleText": "我的"
      }
    },
    {
      "path": "pages/webview/index",
      "style": {
        "navigationBarTitleText": "webviewe"
      }
    },
    {
      "path": "pages/login/index",
      "style": {
        "navigationBarTitleText": "登录",
        "navigationStyle": "custom"
      }
    }
  ],
  // 分包
  "subPackages": [
    {
      "root": "pages/p1",
      "pages": [
        {
          "path": "demo/index",
          "style": {}
        }
      ]
    },
    {
      "root": "pages/com",
      "pages": [
        {
          "path": "dialog/index",
          "style": {}
        }
      ]
    }
  ],
  // wifi下预加载
  "preloadRule": {
    "pages/index/index": {
      "network": "wifi",
      "packages": ["pages/p1", "pages/com"]
    }
  },
  // 底部栏
  "tabBar": {
    "color": "#999999",
    "selectedColor": "#18905F",
    "list": [
      {
        "iconPath": "static/img/index.png",
        "selectedIconPath": "static/img/index-a.png",
        "pagePath": "pages/index/index",
        "text": "首页"
      },
      {
        "iconPath": "static/img/activity.png",
        "selectedIconPath": "static/img/activity-a.png",
        "pagePath": "pages/componentsDemo/index",
        "text": "组件"
      },
      {
        "iconPath": "static/img/activity.png",
        "selectedIconPath": "static/img/activity-a.png",
        "pagePath": "pages/my/index",
        "text": "我的"
      }
    ]
  },
  // 权限
  "permission": {
    "scope.userLocation": {
      "desc": "你的位置信息将用于小程序位置展示"
    }
  },
  "networkTimeout": {
    "request": 15000,
    "downloadFile": 30000
  },
  "debug": false,
  // 允许跳小程序
  "navigateToMiniProgramAppIdList": ["wxd1aa15dc25901662"],
  // 全局样式
  "globalStyle": {
    "backgroundTextStyle": "dark",
    "navigationBarBackgroundColor": "#ffffff",
    "navigationBarTitleText": "文体通",
    "navigationBarTextStyle": "black"
  },
  "easycom": {
    "autoscan": true,
    "custom": {
      "lj-(.*)": "@/components/lj/$1/index.vue",
      "uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  }
}
